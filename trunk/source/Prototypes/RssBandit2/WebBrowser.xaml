<UserControl x:Class="RssBandit2.WebBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ie="clr-namespace:IEControl;assembly=IEControl">
    <WindowsFormsHost Name="windowsFormsHost1">
        <ie:HtmlControl x:FieldModifier="private" x:Name="htmlControl" 
                        AllowDrop="True"
                        ScriptEnabled="False" 
                        JavaEnabled="False"
                        Border3d="True"
                        FlatScrollBars="True"
                        ScrollBarsEnabled="True"
                        AllowInPlaceNavigation="False"
                        SilentModeEnabled="True"
                        ActiveXEnabled="False"
                        />
    </WindowsFormsHost>
</UserControl>
